#!/usr/bin/env ruby

require_relative "../lib/play"

board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]

puts "Welcome to Tic Tac Toe!"
display_board(board)

# Make sure to execute #play below

def play(board)
counter = 0
loop do 
  turn(board)
  counter = counter + 1
  if counter == 9
  puts "you have finished filling your board"
  break
  end
end
end